        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartMiningYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartMiningYear)
        </dd>
        <dt class="col-sm-2">
