        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MintCountry.Name)
        </dd>
    </dl>

    <div class="row g-3">

        @{
            var postfixes = new[] { "_obverse.webp", "_obverse.png", "_reverse.webp", "_reverse.png" };
        }

        @foreach (var postfix in postfixes)
        {
            <div class="col-12 col-sm-3 col-xl-2 p-1">

                <div class="card">
                    <a target="_blank" href="@("https://goldkatalog.ru/assets/coins/" + Model?.ImageName + postfix)">
                        <img class="card-img-top img-fluid img-thumbnail rounded" style="background-color: #f1f1f0" src="@("https://goldkatalog.ru/assets/coins/" + Model?.ImageName + postfix)" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">Формат .@postfix</h5>
                        <a href="#" class="card-link link-danger">Удалить</a>
                        @*<a href="#" class="card-link">Another link</a>*@
                    </div>
                </div>

            </div>
        }

    </div>

</div>
<div class="mt-3 mb-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

